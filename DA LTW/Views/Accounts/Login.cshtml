@model Account
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Accounts" asp-action="Login" method="post">
    <h1>Login</h1>
    <input type="text" placeholder="Số điện thoại" asp-for="sdt" />
    <input type="password" placeholder="PassWord" asp-for="Password" />
        
    <button type="submit">Login</button>

    @if (ViewData["ValidateMessage"] != null)
    {
                <br />
                <br />
                <label style="color: red">@ViewData["ValidateMessage"]</label>
    }
    <a asp-controller="Accounts" asp-action="SignUp" class="btn btn-secondary"
       style="width: 150px">Sign Up</a>
</form>